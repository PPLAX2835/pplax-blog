<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.pplaxblog.xo.dao.TagDao">

    <sql id="basecolumns">`uid`, `createtime` </sql>
    <sql id="othercolumns">`oid`, `content`, `status`, `clickcount` </sql>
    <sql id="allcolumns"><include refid="basecolumns"/>, <include refid="othercolumns"/>, `updatetime`</sql>
    <sql id="table">tag</sql>
    <sql id="count">count(*)</sql>
    <sql id="whereid">where uid = #{uid}</sql>
    <sql id="allfields"><include refid="basecolumns"/>, <include refid="othercolumns"/> </sql>
    <sql id="allparams">#{uid},#{createtime},#{oid},#{content},#{status},#{clickcount}</sql>
    <sql id="setoid">`oid` = #{oid}</sql>
    <sql id="setcontent">`content` = #{content}</sql>
    <sql id="setstatus">`status` = #{status}</sql>
    <sql id="setclickcount">`clickcount` = #{clickcount}</sql>
    <sql id="setkeyword">content like CONCAT('%',#{keyword},'%')</sql>
    <sql id="allsets">set
            <include refid="setoid"/>,
            <include refid="setcontent"/>,
            <include refid="setstatus"/>,
            <include refid="setclickcount"/>
    </sql>
    <sql id="orderby">order by createtime</sql>

    <select id="get" parameterType="string" resultType="xyz.pplax.pplaxblog.xo.entity.Tag">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <include refid="whereid"/>
    </select>

    <select id="getOne" parameterType="hashMap" resultType="xyz.pplax.pplaxblog.xo.entity.Tag">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="clickcount != null">
                and <include refid="setclickcount"/>
            </if>
        </where>
        LIMIT 0,1
    </select>

    <select id="getCount" parameterType="hashMap" resultType="int">
        select
        <include refid="count" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="clickcount != null">
                and <include refid="setclickcount"/>
            </if>
            <if test="keyword != null">
				and
				<include refid="setkeyword" />
			</if>
        </where>
    </select>

    <select id="getList" parameterType="hashMap" resultType="xyz.pplax.pplaxblog.xo.entity.Tag">
        select
        <include refid="allcolumns" />
        from
        <include refid="table"/>
        <where>
            <if test="oid != null">
                and <include refid="setoid"/>
            </if>
            <if test="content != null">
                and <include refid="setcontent"/>
            </if>
            <if test="status != null">
                and <include refid="setstatus"/>
            </if>
            <if test="clickcount != null">
                and <include refid="setclickcount"/>
            </if>
            <if test="keyword != null">
				and
				<include refid="setkeyword" />
			</if>
        </where>
        <!-- 处理orderby语句 -->
        <choose>
            <when test="orderBy != null">
                ${orderBy}
            </when>
            <otherwise>
                <include refid="orderby"/>
                <if test="ascDesc != null">
                    ${ascDesc}
                </if>
            </otherwise>
        </choose>
        <!-- 处理limit语句 -->
        <trim prefix="LIMIT" prefixOverrides=",">
            <if test="startIndex != null and pageSize != null">
                ${startIndex}
            </if>
            <if test="pageSize != null">
                , ${pageSize}
            </if>
        </trim>
    </select>

    <insert id="insert" parameterType="xyz.pplax.pplaxblog.xo.entity.Tag">
        insert into
        <include refid="table"/>
        (<include refid="allfields"/>)
        values (
        <include refid="allparams"/>
        )
    </insert>

    <update id="update" parameterType="xyz.pplax.pplaxblog.xo.entity.Tag">
        update
        <include refid="table"/>
        <include refid="allsets"/>
        <include refid="whereid"/>
    </update>

    <update id="updateFields" parameterType="hashMap">
        update
        <include refid="table"/>
        <set>
            <if test="oid != null">
                <include refid="setoid"/>,
            </if>
            <if test="content != null">
                <include refid="setcontent"/>,
            </if>
            <if test="status != null">
                <include refid="setstatus"/>,
            </if>
            <if test="clickcount != null">
                <include refid="setclickcount"/>
            </if>
        </set>
        <include refid="whereid"/>
    </update>

    <delete id="delete" parameterType="string">
        delete from
        <include refid="table"/>
        <include refid="whereid"/>
    </delete>

</mapper>

