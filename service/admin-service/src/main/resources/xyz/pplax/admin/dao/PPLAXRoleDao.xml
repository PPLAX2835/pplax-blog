<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.admin.dao.PPLAXRoleDao">

    <resultMap id="roleResultMap" type="xyz.pplax.admin.po.Role">
        <id column="uid" property="uid"/>
        <result column="name" property="name"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="status" property="status"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="name != null and name != '' ">
                AND name = #{name}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        name,
        create_time,
        update_time,
        status
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.admin.po.Role" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_role (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="name != null and name != '' ">
                    name,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
                <if test="status != null">
                    status,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="name != null and name != '' ">
                 #{name},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
                <if test="status != null">
                 #{status},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_role
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.admin.po.Role">
        DELETE FROM au_role
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.admin.po.Role">
		UPDATE au_role
		<set>
			<if test="name != null and name != '' ">name = #{name},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
			<if test="status != null">status = #{status},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="roleResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_role
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="roleResultMap" parameterType="xyz.pplax.admin.po.Role">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_role
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="roleResultMap" parameterType="xyz.pplax.admin.po.Role">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_role
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.admin.po.Role">
		SELECT COUNT(*) FROM au_role
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_role (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.name},
				#{item.createTime},
				#{item.updateTime},
				#{item.status},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
    <select id="queryListByCondition" resultMap="roleResultMap">
        select
        <include refid="Base_Column_List" />
        from au_role
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.keyword != null">
                and name=#{condition.keyword}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.status != null">
                and status=#{condition.status}
            </if>
        </where>
    </select>
</mapper>