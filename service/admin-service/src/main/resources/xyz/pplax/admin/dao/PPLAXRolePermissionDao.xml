<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.admin.dao.PPLAXRolePermissionDao">

    <resultMap id="rolePermissionResultMap" type="xyz.pplax.admin.po.RolePermissionRelationship">
        <id column="uid" property="uid"/>
        <result column="role_uid" property="roleUid"/>
        <result column="permission_uid" property="permissionUid"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="roleUid != null">
                AND role_uid = #{roleUid}
            </if>
            <if test="permissionUid != null">
                AND permission_uid = #{permissionUid}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        role_uid,
        permission_uid
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.admin.po.RolePermissionRelationship" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_role_permission (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="roleUid != null">
                    role_uid,
                </if>
                <if test="permissionUid != null">
                    permission_uid,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="roleUid != null">
                 #{roleUid},
                </if>
                <if test="permissionUid != null">
                 #{permissionUid},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_role_permission
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.admin.po.RolePermissionRelationship">
        DELETE FROM au_role_permission
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.admin.po.RolePermissionRelationship">
		UPDATE au_role_permission
		<set>
			<if test="roleUid != null">role_uid = #{roleUid},</if>
			<if test="permissionUid != null">permission_uid = #{permissionUid},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="rolePermissionResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_role_permission
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="rolePermissionResultMap" parameterType="xyz.pplax.admin.po.RolePermissionRelationship">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_role_permission
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="rolePermissionResultMap" parameterType="xyz.pplax.admin.po.RolePermissionRelationship">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_role_permission
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.admin.po.RolePermissionRelationship">
		SELECT COUNT(*) FROM au_role_permission
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_role_permission (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.roleUid},
				#{item.permissionUid},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
    <select id="queryListByCondition" resultMap="rolePermissionResultMap">
        select
        <include refid="Base_Column_List" />
        from au_role_permission
        <where>
            <if test="condition.uid != null">
                and role_uid=#{condition.uid}
            </if>
            <if test="condition.otherUid != null">
                and permission_uid=#{condition.otherUid}
            </if>
        </where>
    </select>
</mapper>