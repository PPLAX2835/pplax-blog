<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.admin.dao.PPLAXRouterPermissionDao">

    <resultMap id="routerPermissionResultMap" type="xyz.pplax.admin.po.RouterPermission">
        <id column="uid" property="uid"/>
        <result column="admin_router_uid" property="adminRouterUid"/>
        <result column="permission_uid" property="permissionUid"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="adminRouterUid != null">
                AND admin_router_uid = #{adminRouterUid}
            </if>
            <if test="permissionUid != null">
                AND permission_uid = #{permissionUid}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        admin_router_uid,
        permission_uid
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.admin.po.RouterPermission" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_router_permission (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="adminRouterUid != null">
                    admin_router_uid,
                </if>
                <if test="permissionUid != null">
                    permission_uid,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="adminRouterUid != null">
                 #{adminRouterUid},
                </if>
                <if test="permissionUid != null">
                 #{permissionUid},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_router_permission
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.admin.po.RouterPermission">
		UPDATE au_router_permission
		<set>
			<if test="adminRouterUid != null">admin_router_uid = #{adminRouterUid},</if>
			<if test="permissionUid != null">permission_uid = #{permissionUid},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="routerPermissionResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_router_permission
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="routerPermissionResultMap" parameterType="xyz.pplax.admin.po.RouterPermission">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_router_permission
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="routerPermissionResultMap" parameterType="xyz.pplax.admin.po.RouterPermission">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_router_permission
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.admin.po.RouterPermission">
		SELECT COUNT(*) FROM au_router_permission
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_router_permission (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.adminRouterUid},
				#{item.permissionUid},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

</mapper>