<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.admin.dao.PPLAXSocialDao">

    <resultMap id="socialResultMap" type="xyz.pplax.admin.po.Social">
        <id column="uid" property="uid"/>
        <result column="social_name" property="socialName"/>
        <result column="social_icon" property="socialIcon"/>
        <result column="social_url" property="socialUrl"/>
        <result column="is_show" property="show"/>
        <result column="user_uid" property="userUid"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_delete" property="delete"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="socialName != null and socialName != '' ">
                AND social_name = #{socialName}
            </if>
            <if test="socialIcon != null and socialIcon != '' ">
                AND social_icon = #{socialIcon}
            </if>
            <if test="socialUrl != null and socialUrl != '' ">
                AND social_url = #{socialUrl}
            </if>
            <if test="show != null">
                AND is_show = #{show}
            </if>
            <if test="userUid != null">
                AND user_uid = #{userUid}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
            <if test="delete != null">
                AND is_delete = #{delete}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        social_name,
        social_icon,
        social_url,
        is_show,
        user_uid,
        create_time,
        update_time,
        is_delete
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.admin.po.Social" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_social (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="socialName != null and socialName != '' ">
                    social_name,
                </if>
                <if test="socialIcon != null and socialIcon != '' ">
                    social_icon,
                </if>
                <if test="socialUrl != null and socialUrl != '' ">
                    social_url,
                </if>
                <if test="show != null">
                    is_show,
                </if>
                <if test="userUid != null">
                    user_uid,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
                <if test="delete != null">
                    is_delete,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="socialName != null and socialName != '' ">
                 #{socialName},
                </if>
                <if test="socialIcon != null and socialIcon != '' ">
                 #{socialIcon},
                </if>
                <if test="socialUrl != null and socialUrl != '' ">
                 #{socialUrl},
                </if>
                <if test="show != null">
                 #{show},
                </if>
                <if test="userUid != null">
                 #{userUid},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
                <if test="delete != null">
                 #{delete},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_social
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.admin.po.Social">
        DELETE FROM au_social
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.admin.po.Social">
		UPDATE au_social
		<set>
			<if test="socialName != null and socialName != '' ">social_name = #{socialName},</if>
			<if test="socialIcon != null and socialIcon != '' ">social_icon = #{socialIcon},</if>
			<if test="socialUrl != null and socialUrl != '' ">social_url = #{socialUrl},</if>
			<if test="show != null">is_show = #{show},</if>
			<if test="userUid != null">user_uid = #{userUid},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
			<if test="delete != null">is_delete = #{delete},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="socialResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_social
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="socialResultMap" parameterType="xyz.pplax.admin.po.Social">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_social
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="socialResultMap" parameterType="xyz.pplax.admin.po.Social">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_social
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.admin.po.Social">
		SELECT COUNT(*) FROM au_social
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_social (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.socialName},
				#{item.socialIcon},
				#{item.socialUrl},
				#{item.show},
				#{item.userUid},
				#{item.createTime},
				#{item.updateTime},
				#{item.delete},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
    <select id="queryListByCondition" resultMap="socialResultMap">
        select
        <include refid="Base_Column_List" />
        from au_social
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.otherUid != null">
                and user_uid=#{condition.otherUid}
            </if>
            <if test="condition.keyword != null">
                and social_name=#{condition.keyword}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.delete !=null">
                and is_delete=#{condition.delete}
            </if>
            <if test="condition.show != null">
                and is_show=#{condition.show,jdbcType=BOOLEAN}
            </if>
        </where>
    </select>
</mapper>