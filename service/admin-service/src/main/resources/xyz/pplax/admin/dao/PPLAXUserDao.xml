<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.admin.dao.PPLAXUserDao">

    <resultMap id="userResultMap" type="xyz.pplax.admin.po.User">
        <id column="uid" property="uid"/>
        <result column="user_summary" property="userSummary"/>
        <result column="nickname" property="nickname"/>
        <result column="gender" property="gender"/>
        <result column="login_uid" property="loginUid"/>
        <result column="site_uid" property="siteUid"/>
        <result column="avatar" property="avatar"/>
        <result column="password" property="password"/>
        <result column="username" property="username"/>
        <result column="profession" property="profession"/>
        <result column="email_uid" property="emailUid"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_delete" property="delete"/>
        <result column="is_account_lock" property="accountLock"/>
        <result column="is_verify_email" property="verifyEmail"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="userSummary != null and userSummary != '' ">
                AND user_summary = #{userSummary}
            </if>
            <if test="nickname != null and nickname != '' ">
                AND nickname = #{nickname}
            </if>
            <if test="gender != null">
                AND gender = #{gender}
            </if>
            <if test="loginUid != null">
                AND login_uid = #{loginUid}
            </if>
            <if test="siteUid != null">
                AND site_uid = #{siteUid}
            </if>
            <if test="avatar != null and avatar != '' ">
                AND avatar = #{avatar}
            </if>
            <if test="password != null and password != '' ">
                AND password = #{password}
            </if>
            <if test="username != null and username != '' ">
                AND username = #{username}
            </if>
            <if test="profession != null and profession != '' ">
                AND profession = #{profession}
            </if>
            <if test="emailUid != null">
                AND email_uid = #{emailUid}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
            <if test="delete != null">
                AND is_delete = #{delete}
            </if>
            <if test="accountLock != null">
                AND is_account_lock = #{accountLock}
            </if>
            <if test="verifyEmail != null">
                AND is_verify_email = #{verifyEmail}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        user_summary,
        nickname,
        gender,
        login_uid,
        site_uid,
        avatar,
        password,
        username,
        profession,
        email_uid,
        create_time,
        update_time,
        is_delete,
        is_account_lock,
        is_verify_email
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.admin.po.User" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_user (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="userSummary != null and userSummary != '' ">
                    user_summary,
                </if>
                <if test="nickname != null and nickname != '' ">
                    nickname,
                </if>
                <if test="gender != null">
                    gender,
                </if>
                <if test="loginUid != null">
                    login_uid,
                </if>
                <if test="siteUid != null">
                    site_uid,
                </if>
                <if test="avatar != null and avatar != '' ">
                    avatar,
                </if>
                <if test="password != null and password != '' ">
                    password,
                </if>
                <if test="username != null and username != '' ">
                    username,
                </if>
                <if test="profession != null and profession != '' ">
                    profession,
                </if>
                <if test="emailUid != null">
                    email_uid,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
                <if test="delete != null">
                    is_delete,
                </if>
                <if test="accountLock != null">
                    is_account_lock,
                </if>
                <if test="verifyEmail != null">
                    is_verify_email,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="userSummary != null and userSummary != '' ">
                 #{userSummary},
                </if>
                <if test="nickname != null and nickname != '' ">
                 #{nickname},
                </if>
                <if test="gender != null">
                 #{gender},
                </if>
                <if test="loginUid != null">
                 #{loginUid},
                </if>
                <if test="siteUid != null">
                 #{siteUid},
                </if>
                <if test="avatar != null and avatar != '' ">
                 #{avatar},
                </if>
                <if test="password != null and password != '' ">
                 #{password},
                </if>
                <if test="username != null and username != '' ">
                 #{username},
                </if>
                <if test="profession != null and profession != '' ">
                 #{profession},
                </if>
                <if test="emailUid != null">
                 #{emailUid},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
                <if test="delete != null">
                 #{delete},
                </if>
                <if test="accountLock != null">
                 #{accountLock},
                </if>
                <if test="verifyEmail != null">
                 #{verifyEmail},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_user
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.admin.po.User">
        DELETE FROM au_user
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.admin.po.User">
		UPDATE au_user
		<set>
			<if test="userSummary != null and userSummary != '' ">user_summary = #{userSummary},</if>
			<if test="nickname != null and nickname != '' ">nickname = #{nickname},</if>
			<if test="gender != null">gender = #{gender},</if>
			<if test="loginUid != null">login_uid = #{loginUid},</if>
			<if test="siteUid != null">site_uid = #{siteUid},</if>
			<if test="avatar != null and avatar != '' ">avatar = #{avatar},</if>
			<if test="password != null and password != '' ">password = #{password},</if>
			<if test="username != null and username != '' ">username = #{username},</if>
			<if test="profession != null and profession != '' ">profession = #{profession},</if>
			<if test="emailUid != null">email_uid = #{emailUid},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
			<if test="delete != null">is_delete = #{delete},</if>
			<if test="accountLock != null">is_account_lock = #{accountLock},</if>
			<if test="verifyEmail != null">is_verify_email = #{verifyEmail},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="userResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_user
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="userResultMap" parameterType="xyz.pplax.admin.po.User">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_user
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="userResultMap" parameterType="xyz.pplax.admin.po.User">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_user
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.admin.po.User">
		SELECT COUNT(*) FROM au_user
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_user (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.userSummary},
				#{item.nickname},
				#{item.gender},
				#{item.loginUid},
				#{item.siteUid},
				#{item.avatar},
				#{item.password},
				#{item.username},
				#{item.profession},
				#{item.emailUid},
				#{item.createTime},
				#{item.updateTime},
				#{item.delete},
				#{item.accountLock},
				#{item.verifyEmail},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
    <select id="queryListByCondition" resultMap="userResultMap">
        select
        <include refid="Base_Column_List" />
        from au_user
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.otherUid != null">
                and uid=#{condition.otherUid}
            </if>
            <if test="condition.keyword != null">
                and username=#{condition.keyword}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.delete !=null">
                and is_delete=#{condition.delete}
            </if>
            <if test="condition.status != null">
                and is_account_lock=#{condition.status}
            </if>
        </where>
    </select>
</mapper>