<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.admin.dao.PPLAXUserRoleDao">

    <resultMap id="userRoleResultMap" type="xyz.pplax.admin.po.UserRoleRelationship">
        <id column="uid" property="uid"/>
        <result column="role_uid" property="roleUid"/>
        <result column="user_uid" property="userUid"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="roleUid != null">
                AND role_uid = #{roleUid}
            </if>
            <if test="userUid != null">
                AND user_uid = #{userUid}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        role_uid,
        user_uid
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.admin.po.UserRoleRelationship" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_user_role (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="roleUid != null">
                    role_uid,
                </if>
                <if test="userUid != null">
                    user_uid,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="roleUid != null">
                 #{roleUid},
                </if>
                <if test="userUid != null">
                 #{userUid},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_user_role
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.admin.po.UserRoleRelationship">
        DELETE FROM au_user_role
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.admin.po.UserRoleRelationship">
		UPDATE au_user_role
		<set>
			<if test="roleUid != null">role_uid = #{roleUid},</if>
			<if test="userUid != null">user_uid = #{userUid},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="userRoleResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_user_role
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="userRoleResultMap" parameterType="xyz.pplax.admin.po.UserRoleRelationship">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_user_role
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="userRoleResultMap" parameterType="xyz.pplax.admin.po.UserRoleRelationship">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_user_role
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.admin.po.UserRoleRelationship">
		SELECT COUNT(*) FROM au_user_role
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_user_role (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.roleUid},
				#{item.userUid},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
    <select id="queryListByCondition" resultMap="userRoleResultMap">
        select
        <include refid="Base_Column_List" />
        from au_user_role
        <where>
            <if test="condition.uid != null">
                and user_uid=#{condition.uid}
            </if>
            <if test="condition.otherUid != null">
                and role_uid=#{condition.otherUid}
            </if>
        </where>
    </select>
</mapper>