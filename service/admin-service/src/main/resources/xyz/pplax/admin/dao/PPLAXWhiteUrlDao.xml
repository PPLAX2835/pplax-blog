<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.admin.dao.PPLAXWhiteUrlDao">

    <resultMap id="whiteUrlResultMap" type="xyz.pplax.admin.po.WhiteUrl">
        <id column="uid" property="uid"/>
        <result column="url" property="url"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="url != null and url != '' ">
                AND url = #{url}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        url,
        create_time,
        update_time
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.admin.po.WhiteUrl" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_white_url (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="url != null and url != '' ">
                    url,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="url != null and url != '' ">
                 #{url},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_white_url
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.admin.po.WhiteUrl">
        DELETE FROM au_white_url
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.admin.po.WhiteUrl">
		UPDATE au_white_url
		<set>
			<if test="url != null and url != '' ">url = #{url},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="whiteUrlResultMap" parameterType="Integer">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_white_url
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="whiteUrlResultMap" parameterType="xyz.pplax.admin.po.WhiteUrl">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_white_url
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="whiteUrlResultMap" parameterType="xyz.pplax.admin.po.WhiteUrl">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_white_url
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.admin.po.WhiteUrl">
		SELECT COUNT(*) FROM au_white_url
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_white_url (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.url},
				#{item.createTime},
				#{item.updateTime},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->


    <!-- 批量删除 -->
    <delete id="batchDelete" parameterType="java.util.List">
        delete from au_white_url where uid in
        <foreach collection="list" item="id"  separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

	<!-- 下面的是兼容旧版本 -->
    <select id="queryListByCondition" resultMap="whiteUrlResultMap" parameterType="xyz.pplax.data.entity.Condition">
        select
        <include refid="Base_Column_List" />
        from au_white_url
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.keyword != null">
                and url=#{condition.keyword}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
        </where>
    </select>
</mapper>