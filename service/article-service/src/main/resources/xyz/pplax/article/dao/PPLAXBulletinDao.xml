<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.article.dao.PPLAXBulletinDao">

    <resultMap id="bulletinResultMap" type="xyz.pplax.article.po.Bulletin">
        <id column="uid" property="uid"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="user_uid" property="userUid"/>
        <result column="is_show" property="show"/>
        <result column="is_timing" property="timing"/>
        <result column="timing_publish_time" property="timingPublishTime"/>
        <result column="is_delete" property="delete"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="title != null and title != '' ">
                AND title = #{title}
            </if>
            <if test="content != null and content != '' ">
                AND content = #{content}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
            <if test="userUid != null">
                AND user_uid = #{userUid}
            </if>
            <if test="show != null">
                AND is_show = #{show}
            </if>
            <if test="timing != null">
                AND is_timing = #{timing}
            </if>
            <if test="timingPublishTime != null and timingPublishTime != '' ">
                AND timing_publish_time = #{timingPublishTime}
            </if>
            <if test="delete != null">
                AND is_delete = #{delete}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        title,
        content,
        create_time,
        update_time,
        user_uid,
        is_show,
        is_timing,
        timing_publish_time,
        is_delete
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.article.po.Bulletin" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_bulletin (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="title != null and title != '' ">
                    title,
                </if>
                <if test="content != null and content != '' ">
                    content,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
                <if test="userUid != null">
                    user_uid,
                </if>
                <if test="show != null">
                    is_show,
                </if>
                <if test="timing != null">
                    is_timing,
                </if>
                <if test="timingPublishTime != null and timingPublishTime != '' ">
                    timing_publish_time,
                </if>
                <if test="delete != null">
                    is_delete,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="title != null and title != '' ">
                 #{title},
                </if>
                <if test="content != null and content != '' ">
                 #{content},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
                <if test="userUid != null">
                 #{userUid},
                </if>
                <if test="show != null">
                 #{show},
                </if>
                <if test="timing != null">
                 #{timing},
                </if>
                <if test="timingPublishTime != null and timingPublishTime != '' ">
                 #{timingPublishTime},
                </if>
                <if test="delete != null">
                 #{delete},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_bulletin
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.article.po.Bulletin">
        DELETE FROM au_bulletin
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.article.po.Bulletin">
		UPDATE au_bulletin
		<set>
			<if test="title != null and title != '' ">title = #{title},</if>
			<if test="content != null and content != '' ">content = #{content},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
			<if test="userUid != null">user_uid = #{userUid},</if>
			<if test="show != null">is_show = #{show},</if>
			<if test="timing != null">is_timing = #{timing},</if>
			<if test="timingPublishTime != null and timingPublishTime != '' ">timing_publish_time = #{timingPublishTime},</if>
			<if test="delete != null">is_delete = #{delete},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="bulletinResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_bulletin
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="bulletinResultMap" parameterType="xyz.pplax.article.po.Bulletin">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_bulletin
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="bulletinResultMap" parameterType="xyz.pplax.article.po.Bulletin">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_bulletin
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.article.po.Bulletin">
		SELECT COUNT(*) FROM au_bulletin
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_bulletin (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.title},
				#{item.content},
				#{item.createTime},
				#{item.updateTime},
				#{item.userUid},
				#{item.show},
				#{item.timing},
				#{item.timingPublishTime},
				#{item.delete},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
	<select id="queryListByCondition" resultMap="bulletinResultMap">
		select
		<include refid="Base_Column_List" />
		from au_bulletin
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.otherUid != null">
                and user_uid=#{condition.otherUid}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.keyword != null">
                and content like concat('%',#{condition.keyword},'%')
            </if>
            <if test="condition.delete != null">
                and is_delete=#{condition.delete}
            </if>
            <if test="condition.status != null">
                and is_timing=#{condition.status}
            </if>
            <if test="condition.show != null ">
                and is_show=#{condition.show}
            </if>
        </where>
	</select>
</mapper>