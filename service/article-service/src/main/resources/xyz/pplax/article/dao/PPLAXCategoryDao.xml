<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.article.dao.PPLAXCategoryDao">

    <resultMap id="categoryResultMap" type="xyz.pplax.article.po.Category">
        <id column="uid" property="uid"/>
        <result column="title" property="title"/>
        <result column="summary" property="summary"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="cover_url" property="coverUrl"/>
        <result column="is_delete" property="delete"/>
        <result column="user_uid" property="userUid"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="title != null and title != '' ">
                AND title = #{title}
            </if>
            <if test="summary != null and summary != '' ">
                AND summary = #{summary}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
            <if test="coverUrl != null and coverUrl != '' ">
                AND cover_url = #{coverUrl}
            </if>
            <if test="delete != null">
                AND is_delete = #{delete}
            </if>
            <if test="userUid != null">
                AND user_uid = #{userUid}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        title,
        summary,
        create_time,
        update_time,
        cover_url,
        is_delete,
        user_uid
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.article.po.Category" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_category (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="title != null and title != '' ">
                    title,
                </if>
                <if test="summary != null and summary != '' ">
                    summary,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
                <if test="coverUrl != null and coverUrl != '' ">
                    cover_url,
                </if>
                <if test="delete != null">
                    is_delete,
                </if>
                <if test="userUid != null">
                    user_uid,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="title != null and title != '' ">
                 #{title},
                </if>
                <if test="summary != null and summary != '' ">
                 #{summary},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
                <if test="coverUrl != null and coverUrl != '' ">
                 #{coverUrl},
                </if>
                <if test="delete != null">
                 #{delete},
                </if>
                <if test="userUid != null">
                 #{userUid},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_category
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.article.po.Category">
        DELETE FROM au_category
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.article.po.Category">
		UPDATE au_category
		<set>
			<if test="title != null and title != '' ">title = #{title},</if>
			<if test="summary != null and summary != '' ">summary = #{summary},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
			<if test="coverUrl != null and coverUrl != '' ">cover_url = #{coverUrl},</if>
			<if test="delete != null">is_delete = #{delete},</if>
			<if test="userUid != null">user_uid = #{userUid},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="categoryResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_category
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="categoryResultMap" parameterType="xyz.pplax.article.po.Category">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_category
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="categoryResultMap" parameterType="xyz.pplax.article.po.Category">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_category
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.article.po.Category">
		SELECT COUNT(*) FROM au_category
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_category (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.title},
				#{item.summary},
				#{item.createTime},
				#{item.updateTime},
				#{item.coverUrl},
				#{item.delete},
				#{item.userUid},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
	<select id="queryListByCondition" resultMap="categoryResultMap">
		select
		<include refid="Base_Column_List" />
		from au_category
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.keyword != null">
                and title like concat(#{condition.keyword},'%')
            </if>
            <if test="condition.otherUid != null">
                and user_uid=#{condition.otherUid}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.delete != null">
                and is_delete=#{condition.delete}
            </if>
        </where>
	</select>
</mapper>