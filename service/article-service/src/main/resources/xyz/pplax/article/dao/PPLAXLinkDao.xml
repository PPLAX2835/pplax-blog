<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.article.dao.PPLAXLinkDao">

    <resultMap id="linkResultMap" type="xyz.pplax.article.po.Link">
        <id column="uid" property="uid"/>
        <result column="user_uid" property="userUid"/>
        <result column="category_name" property="categoryName"/>
        <result column="link_logo" property="linkLogo"/>
        <result column="link_url" property="linkUrl"/>
        <result column="link_title" property="linkTitle"/>
        <result column="link_description" property="linkDescription"/>
        <result column="link_cover" property="linkCover"/>
        <result column="is_publish" property="publish"/>
        <result column="email" property="email"/>
        <result column="qq_number" property="qqNumber"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="userUid != null">
                AND user_uid = #{userUid}
            </if>
            <if test="categoryName != null and categoryName != '' ">
                AND category_name = #{categoryName}
            </if>
            <if test="linkLogo != null and linkLogo != '' ">
                AND link_logo = #{linkLogo}
            </if>
            <if test="linkUrl != null and linkUrl != '' ">
                AND link_url = #{linkUrl}
            </if>
            <if test="linkTitle != null and linkTitle != '' ">
                AND link_title = #{linkTitle}
            </if>
            <if test="linkDescription != null and linkDescription != '' ">
                AND link_description = #{linkDescription}
            </if>
            <if test="linkCover != null and linkCover != '' ">
                AND link_cover = #{linkCover}
            </if>
            <if test="publish != null">
                AND is_publish = #{publish}
            </if>
            <if test="email != null and email != '' ">
                AND email = #{email}
            </if>
            <if test="qqNumber != null">
                AND qq_number = #{qqNumber}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        user_uid,
        category_name,
        link_logo,
        link_url,
        link_title,
        link_description,
        link_cover,
        is_publish,
        email,
        qq_number,
        create_time,
        update_time
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.article.po.Link" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_link (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="userUid != null">
                    user_uid,
                </if>
                <if test="categoryName != null and categoryName != '' ">
                    category_name,
                </if>
                <if test="linkLogo != null and linkLogo != '' ">
                    link_logo,
                </if>
                <if test="linkUrl != null and linkUrl != '' ">
                    link_url,
                </if>
                <if test="linkTitle != null and linkTitle != '' ">
                    link_title,
                </if>
                <if test="linkDescription != null and linkDescription != '' ">
                    link_description,
                </if>
                <if test="linkCover != null and linkCover != '' ">
                    link_cover,
                </if>
                <if test="publish != null">
                    is_publish,
                </if>
                <if test="email != null and email != '' ">
                    email,
                </if>
                <if test="qqNumber != null">
                    qq_number,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="userUid != null">
                 #{userUid},
                </if>
                <if test="categoryName != null and categoryName != '' ">
                 #{categoryName},
                </if>
                <if test="linkLogo != null and linkLogo != '' ">
                 #{linkLogo},
                </if>
                <if test="linkUrl != null and linkUrl != '' ">
                 #{linkUrl},
                </if>
                <if test="linkTitle != null and linkTitle != '' ">
                 #{linkTitle},
                </if>
                <if test="linkDescription != null and linkDescription != '' ">
                 #{linkDescription},
                </if>
                <if test="linkCover != null and linkCover != '' ">
                 #{linkCover},
                </if>
                <if test="publish != null">
                 #{publish},
                </if>
                <if test="email != null and email != '' ">
                 #{email},
                </if>
                <if test="qqNumber != null">
                 #{qqNumber},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_link
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.article.po.Link">
        DELETE FROM au_link
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.article.po.Link">
		UPDATE au_link
		<set>
			<if test="userUid != null">user_uid = #{userUid},</if>
			<if test="categoryName != null and categoryName != '' ">category_name = #{categoryName},</if>
			<if test="linkLogo != null and linkLogo != '' ">link_logo = #{linkLogo},</if>
			<if test="linkUrl != null and linkUrl != '' ">link_url = #{linkUrl},</if>
			<if test="linkTitle != null and linkTitle != '' ">link_title = #{linkTitle},</if>
			<if test="linkDescription != null and linkDescription != '' ">link_description = #{linkDescription},</if>
			<if test="linkCover != null and linkCover != '' ">link_cover = #{linkCover},</if>
			<if test="publish != null">is_publish = #{publish},</if>
			<if test="email != null and email != '' ">email = #{email},</if>
			<if test="qqNumber != null">qq_number = #{qqNumber},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="linkResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_link
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="linkResultMap" parameterType="xyz.pplax.article.po.Link">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_link
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="linkResultMap" parameterType="xyz.pplax.article.po.Link">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_link
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.article.po.Link">
		SELECT COUNT(*) FROM au_link
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_link (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.userUid},
				#{item.categoryName},
				#{item.linkLogo},
				#{item.linkUrl},
				#{item.linkTitle},
				#{item.linkDescription},
				#{item.linkCover},
				#{item.publish},
				#{item.email},
				#{item.qqNumber},
				#{item.createTime},
				#{item.updateTime},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
	<select id="queryListByCondition" resultMap="linkResultMap">
		select
		<include refid="Base_Column_List" />
		from au_link
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.otherUid != null">
                and user_uid=#{condition.otherUid}
            </if>
            <if test="condition.keyword != null">
                and link_url=#{condition.keyword}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.status != null">
                and is_publish=#{condition.status,jdbcType=BOOLEAN}
            </if>
        </where>
	</select>
</mapper>