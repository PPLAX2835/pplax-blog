<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.article.dao.PPLAXTalkDao">

    <resultMap id="talkResultMap" type="xyz.pplax.article.po.Talk">
        <id column="uid" property="uid"/>
        <result column="user_uid" property="userUid"/>
        <result column="is_show_comment" property="showComment"/>
        <result column="comment_uids" property="commentUids"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_time" property="createTime"/>
        <result column="content" property="content"/>
        <result column="title" property="title"/>
        <result column="is_show" property="show"/>
        <result column="like_number" property="likeNumber"/>
        <result column="picture_src_list" property="pictureSrcList"/>
        <result column="is_delete" property="delete"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="userUid != null">
                AND user_uid = #{userUid}
            </if>
            <if test="showComment != null">
                AND is_show_comment = #{showComment}
            </if>
            <if test="commentUids != null and commentUids != '' ">
                AND comment_uids = #{commentUids}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="content != null and content != '' ">
                AND content = #{content}
            </if>
            <if test="title != null and title != '' ">
                AND title = #{title}
            </if>
            <if test="show != null">
                AND is_show = #{show}
            </if>
            <if test="likeNumber != null">
                AND like_number = #{likeNumber}
            </if>
            <if test="pictureSrcList != null and pictureSrcList != '' ">
                AND picture_src_list = #{pictureSrcList}
            </if>
            <if test="delete != null">
                AND is_delete = #{delete}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        user_uid,
        is_show_comment,
        comment_uids,
        update_time,
        create_time,
        content,
        title,
        is_show,
        like_number,
        picture_src_list,
        is_delete
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.article.po.Talk" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_talk (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="userUid != null">
                    user_uid,
                </if>
                <if test="showComment != null">
                    is_show_comment,
                </if>
                <if test="commentUids != null and commentUids != '' ">
                    comment_uids,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="content != null and content != '' ">
                    content,
                </if>
                <if test="title != null and title != '' ">
                    title,
                </if>
                <if test="show != null">
                    is_show,
                </if>
                <if test="likeNumber != null">
                    like_number,
                </if>
                <if test="pictureSrcList != null and pictureSrcList != '' ">
                    picture_src_list,
                </if>
                <if test="delete != null">
                    is_delete,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="userUid != null">
                 #{userUid},
                </if>
                <if test="showComment != null">
                 #{showComment},
                </if>
                <if test="commentUids != null and commentUids != '' ">
                 #{commentUids},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="content != null and content != '' ">
                 #{content},
                </if>
                <if test="title != null and title != '' ">
                 #{title},
                </if>
                <if test="show != null">
                 #{show},
                </if>
                <if test="likeNumber != null">
                 #{likeNumber},
                </if>
                <if test="pictureSrcList != null and pictureSrcList != '' ">
                 #{pictureSrcList},
                </if>
                <if test="delete != null">
                 #{delete},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_talk
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.article.po.Talk">
        DELETE FROM au_talk
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.article.po.Talk">
		UPDATE au_talk
		<set>
			<if test="userUid != null">user_uid = #{userUid},</if>
			<if test="showComment != null">is_show_comment = #{showComment},</if>
			<if test="commentUids != null and commentUids != '' ">comment_uids = #{commentUids},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
			<if test="createTime != null and createTime != '' ">create_time = #{createTime},</if>
			<if test="content != null and content != '' ">content = #{content},</if>
			<if test="title != null and title != '' ">title = #{title},</if>
			<if test="show != null">is_show = #{show},</if>
			<if test="likeNumber != null">like_number = #{likeNumber},</if>
			<if test="pictureSrcList != null and pictureSrcList != '' ">picture_src_list = #{pictureSrcList},</if>
			<if test="delete != null">is_delete = #{delete},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="talkResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_talk
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="talkResultMap" parameterType="xyz.pplax.article.po.Talk">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_talk
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="talkResultMap" parameterType="xyz.pplax.article.po.Talk">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_talk
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.article.po.Talk">
		SELECT COUNT(*) FROM au_talk
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_talk (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.userUid},
				#{item.showComment},
				#{item.commentUids},
				#{item.updateTime},
				#{item.createTime},
				#{item.content},
				#{item.title},
				#{item.show},
				#{item.likeNumber},
				#{item.pictureSrcList},
				#{item.delete},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
	<select id="queryListByCondition" resultMap="talkResultMap">
		select
		<include refid="Base_Column_List" />
		from au_talk
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.otherUid != null">
                and user_uid=#{condition.otherUid}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.keyword != null">
                and content like concat('%',#{condition.keyword},'%')
            </if>
            <if test="condition.status != null">
                and is_show_comment=#{condition.status,jdbcType=BOOLEAN}
            </if>
            <if test="condition.delete != null">
                and is_delete=#{condition.delete}
            </if>
            <if test="condition.show != null">
                and is_show=#{condition.show}
            </if>
        </where>
	</select>
</mapper>