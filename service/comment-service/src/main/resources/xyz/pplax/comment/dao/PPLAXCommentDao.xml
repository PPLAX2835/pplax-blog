			<if test="userUid != null">user_uid = #{userUid},</if>
			<if test="delete != null">is_delete = #{delete},</if>
			<if test="pageType != null and pageType != '' ">page_type = #{pageType},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="commentResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_comment
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="commentResultMap" parameterType="xyz.pplax.comment.po.Comment">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_comment
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="commentResultMap" parameterType="xyz.pplax.comment.po.Comment">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_comment
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.comment.po.Comment">
		SELECT COUNT(*) FROM au_comment
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_comment (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.username},
				#{item.avatar},
				#{item.site},
				#{item.email},
				#{item.createTime},
				#{item.updateTime},
				#{item.commentIp},
				#{item.operationSystemInfo},
				#{item.showComment},
				#{item.replyCommentUid},
				#{item.emailNotice},
				#{item.path},
				#{item.nextCommentUidArray},
				#{item.content},
				#{item.userUid},
				#{item.delete},
