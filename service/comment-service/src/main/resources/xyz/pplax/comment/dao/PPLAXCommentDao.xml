            <if test="delete != null">
                AND is_delete = #{delete}
            </if>
            <if test="pageType != null and pageType != '' ">
                AND page_type = #{pageType}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        username,
        avatar,
        site,
        email,
        create_time,
        update_time,
        comment_ip,
        operation_system_info,
        is_show_comment,
        reply_comment_uid,
        is_email_notice,
        path,
        next_comment_uid_array,
