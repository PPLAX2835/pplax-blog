<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.file.dao.PPLAXFileDao">

    <resultMap id="fileResultMap" type="xyz.pplax.file.po.File">
        <id column="uid" property="uid"/>
        <result column="user_uid" property="userUid"/>
        <result column="file_name" property="fileName"/>
        <result column="size" property="size"/>
        <result column="summary" property="summary"/>
        <result column="path" property="path"/>
        <result column="storage_mode" property="storageMode"/>
        <result column="storage_path" property="storagePath"/>
        <result column="is_delete" property="delete"/>
        <result column="create_time" property="createTime"/>
        <result column="delete_time" property="deleteTime"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="userUid != null">
                AND user_uid = #{userUid}
            </if>
            <if test="fileName != null and fileName != '' ">
                AND file_name = #{fileName}
            </if>
            <if test="size != null">
                AND size = #{size}
            </if>
            <if test="summary != null and summary != '' ">
                AND summary = #{summary}
            </if>
            <if test="path != null and path != '' ">
                AND path = #{path}
            </if>
            <if test="storageMode != null">
                AND storage_mode = #{storageMode}
            </if>
            <if test="storagePath != null and storagePath != '' ">
                AND storage_path = #{storagePath}
            </if>
            <if test="delete != null">
                AND is_delete = #{delete}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="deleteTime != null and deleteTime != '' ">
                AND delete_time = #{deleteTime}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        user_uid,
        file_name,
        size,
        summary,
        path,
        storage_mode,
        storage_path,
        is_delete,
        create_time,
        delete_time
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.file.po.File" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_file (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="userUid != null">
                    user_uid,
                </if>
                <if test="fileName != null and fileName != '' ">
                    file_name,
                </if>
                <if test="size != null">
                    size,
                </if>
                <if test="summary != null and summary != '' ">
                    summary,
                </if>
                <if test="path != null and path != '' ">
                    path,
                </if>
                <if test="storageMode != null">
                    storage_mode,
                </if>
                <if test="storagePath != null and storagePath != '' ">
                    storage_path,
                </if>
                <if test="delete != null">
                    is_delete,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="deleteTime != null and deleteTime != '' ">
                    delete_time,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="userUid != null">
                 #{userUid},
                </if>
                <if test="fileName != null and fileName != '' ">
                 #{fileName},
                </if>
                <if test="size != null">
                 #{size},
                </if>
                <if test="summary != null and summary != '' ">
                 #{summary},
                </if>
                <if test="path != null and path != '' ">
                 #{path},
                </if>
                <if test="storageMode != null">
                 #{storageMode},
                </if>
                <if test="storagePath != null and storagePath != '' ">
                 #{storagePath},
                </if>
                <if test="delete != null">
                 #{delete},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="deleteTime != null and deleteTime != '' ">
                 #{deleteTime},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_file
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.file.po.File">
        DELETE FROM au_file
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.file.po.File">
		UPDATE au_file
		<set>
			<if test="userUid != null">user_uid = #{userUid},</if>
			<if test="fileName != null and fileName != '' ">file_name = #{fileName},</if>
			<if test="size != null">size = #{size},</if>
			<if test="summary != null and summary != '' ">summary = #{summary},</if>
			<if test="path != null and path != '' ">path = #{path},</if>
			<if test="storageMode != null">storage_mode = #{storageMode},</if>
			<if test="storagePath != null and storagePath != '' ">storage_path = #{storagePath},</if>
			<if test="delete != null">is_delete = #{delete},</if>
			<if test="deleteTime != null and deleteTime != '' ">delete_time = #{deleteTime},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="fileResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_file
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="fileResultMap" parameterType="xyz.pplax.file.po.File">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_file
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="fileResultMap" parameterType="xyz.pplax.file.po.File">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_file
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.file.po.File">
		SELECT COUNT(*) FROM au_file
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_file (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.userUid},
				#{item.fileName},
				#{item.size},
				#{item.summary},
				#{item.path},
				#{item.storageMode},
				#{item.storagePath},
				#{item.delete},
				#{item.createTime},
				#{item.deleteTime},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
	<select id="queryListByCondition" resultMap="fileResultMap">
		select
		<include refid="Base_Column_List" />
		from au_file
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.otherUid != null">
                and user_uid=#{condition.otherUid}
            </if>
            <if test="condition.keyword != null">
                and file_name=#{condition.keyword}
            </if>
            <if test="condition.otherField != null and condition.otherField != ''">
                and `file_name` REGEXP #{condition.otherField,jdbcType=VARCHAR}
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.delete !=null">
                and is_delete=#{condition.delete}
            </if>
        </where>
	</select>
</mapper>