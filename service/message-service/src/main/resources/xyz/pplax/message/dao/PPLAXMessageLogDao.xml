<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.pplax.message.dao.PPLAXMessageLogDao">

    <resultMap id="messageLogResultMap" type="xyz.pplax.message.po.MessageLog">
        <id column="uid" property="uid"/>
        <result column="message" property="message"/>
        <result column="exchange" property="exchange"/>
        <result column="queue" property="queue"/>
        <result column="routing_key" property="routingKey"/>
        <result column="try_count" property="tryCount"/>
        <result column="consume_status" property="consumeStatus"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="exchange_type" property="exchangeType"/>
        <result column="ack_status" property="ackStatus"/>
        <result column="error_message" property="errorMessage"/>
    </resultMap>

  	<sql id="Where_Condition">
        <where>
            <if test="uid != null">
                AND uid = #{uid}
            </if>
            <if test="message != null and message != '' ">
                AND message = #{message}
            </if>
            <if test="exchange != null and exchange != '' ">
                AND exchange = #{exchange}
            </if>
            <if test="queue != null and queue != '' ">
                AND queue = #{queue}
            </if>
            <if test="routingKey != null and routingKey != '' ">
                AND routing_key = #{routingKey}
            </if>
            <if test="tryCount != null">
                AND try_count = #{tryCount}
            </if>
            <if test="consumeStatus != null">
                AND consume_status = #{consumeStatus}
            </if>
            <if test="createTime != null and createTime != '' ">
                AND create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != '' ">
                AND update_time = #{updateTime}
            </if>
            <if test="exchangeType != null and exchangeType != '' ">
                AND exchange_type = #{exchangeType}
            </if>
            <if test="ackStatus != null">
                AND ack_status = #{ackStatus}
            </if>
            <if test="errorMessage != null and errorMessage != '' ">
                AND error_message = #{errorMessage}
            </if>
        </where>
  	</sql>

    <sql id="Base_Column_List">
        uid,
        message,
        exchange,
        queue,
        routing_key,
        try_count,
        consume_status,
        create_time,
        update_time,
        exchange_type,
        ack_status,
        error_message
    </sql>

	<!-- common methods start -->
    <!-- 新增一条数据 -->
	<insert id="insert" parameterType="xyz.pplax.message.po.MessageLog" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO au_message_log (
            <trim suffixOverrides=",">
                <if test="uid != null">
                    uid,
                </if>
                <if test="message != null and message != '' ">
                    message,
                </if>
                <if test="exchange != null and exchange != '' ">
                    exchange,
                </if>
                <if test="queue != null and queue != '' ">
                    queue,
                </if>
                <if test="routingKey != null and routingKey != '' ">
                    routing_key,
                </if>
                <if test="tryCount != null">
                    try_count,
                </if>
                <if test="consumeStatus != null">
                    consume_status,
                </if>
                <if test="createTime != null and createTime != '' ">
                    create_time,
                </if>
                <if test="updateTime != null and updateTime != '' ">
                    update_time,
                </if>
                <if test="exchangeType != null and exchangeType != '' ">
                    exchange_type,
                </if>
                <if test="ackStatus != null">
                    ack_status,
                </if>
                <if test="errorMessage != null and errorMessage != '' ">
                    error_message,
                </if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="uid != null">
                 #{uid},
                </if>
                <if test="message != null and message != '' ">
                 #{message},
                </if>
                <if test="exchange != null and exchange != '' ">
                 #{exchange},
                </if>
                <if test="queue != null and queue != '' ">
                 #{queue},
                </if>
                <if test="routingKey != null and routingKey != '' ">
                 #{routingKey},
                </if>
                <if test="tryCount != null">
                 #{tryCount},
                </if>
                <if test="consumeStatus != null">
                 #{consumeStatus},
                </if>
                <if test="createTime != null and createTime != '' ">
                 #{createTime},
                </if>
                <if test="updateTime != null and updateTime != '' ">
                 #{updateTime},
                </if>
                <if test="exchangeType != null and exchangeType != '' ">
                 #{exchangeType},
                </if>
                <if test="ackStatus != null">
                 #{ackStatus},
                </if>
                <if test="errorMessage != null and errorMessage != '' ">
                 #{errorMessage},
                </if>
            </trim>
        )
	</insert>

    <!-- 通过主键删除数据 -->
	<delete id="deleteById" parameterType="Long">
        DELETE FROM au_message_log
        WHERE uid = #{uid} 
	</delete>

    <!-- 根据传入参数删除数据 -->
	<delete id="deleteByWhere" parameterType="xyz.pplax.message.po.MessageLog">
        DELETE FROM au_message_log
        <include refid="Where_Condition" />
	</delete>

    <!-- 根据id更新数据 -->
    <update id="updateById" parameterType="xyz.pplax.message.po.MessageLog">
		UPDATE au_message_log
		<set>
			<if test="message != null and message != '' ">message = #{message},</if>
			<if test="exchange != null and exchange != '' ">exchange = #{exchange},</if>
			<if test="queue != null and queue != '' ">queue = #{queue},</if>
			<if test="routingKey != null and routingKey != '' ">routing_key = #{routingKey},</if>
			<if test="tryCount != null">try_count = #{tryCount},</if>
			<if test="consumeStatus != null">consume_status = #{consumeStatus},</if>
			<if test="updateTime != null and updateTime != '' ">update_time = #{updateTime},</if>
			<if test="exchangeType != null and exchangeType != '' ">exchange_type = #{exchangeType},</if>
			<if test="ackStatus != null">ack_status = #{ackStatus},</if>
			<if test="errorMessage != null and errorMessage != '' ">error_message = #{errorMessage},</if>
		</set>
		WHERE
		    uid = #{uid}
	</update>

	<!-- 根据主键查询数据  -->
	<select id="queryById" resultMap="messageLogResultMap" parameterType="Long">
        SELECT
        <include refid="Base_Column_List" />
  	    FROM au_message_log
        WHERE
            uid = #{uid}
    </select>

    <!-- 查询一条记录  -->
	<select id="queryOne" resultMap="messageLogResultMap" parameterType="xyz.pplax.message.po.MessageLog">
         SELECT
         <include refid="Base_Column_List" />
  	     FROM au_message_log
         <include refid="Where_Condition" />
         LIMIT 1
    </select>

	<!-- 根据传入参数查询数据列表  -->
	<select id="queryListByWhere" resultMap="messageLogResultMap" parameterType="xyz.pplax.message.po.MessageLog">
        SELECT
        <include refid="Base_Column_List" />
        FROM au_message_log
        <include refid="Where_Condition" />
    </select>

	<!-- 统计符合条件的数据数量 -->
	<select id="countByWhere" resultType="int" parameterType="xyz.pplax.message.po.MessageLog">
		SELECT COUNT(*) FROM au_message_log
		<include refid="Where_Condition" />
	</select>

    <!-- 批量插入多条数据 -->
	<insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO au_message_log (
        	<include refid="Base_Column_List" />
        ) VALUES
        <foreach collection="list" item="item" index= "index" separator =",">
            (
            <trim suffixOverrides=",">
				#{item.uid},
				#{item.message},
				#{item.exchange},
				#{item.queue},
				#{item.routingKey},
				#{item.tryCount},
				#{item.consumeStatus},
				#{item.createTime},
				#{item.updateTime},
				#{item.exchangeType},
				#{item.ackStatus},
				#{item.errorMessage},
            </trim>
            )
        </foreach>
    </insert>
	<!-- common methods end -->

	<!-- 下面的是兼容旧版本 -->
	<select id="queryListByCondition" resultMap="messageLogResultMap">
		select
		<include refid="Base_Column_List" />
		from au_message_log
        <where>
            <if test="condition.uid != null">
                and uid=#{condition.uid}
            </if>
            <if test="condition.keyword != null">
                and routing_key like concat('%', #{condition.keyword}, '%')
            </if>
            <if test="condition.startTime != null and condition.endTime != null">
                and create_time between #{condition.startTime} and #{condition.endTime}
            </if>
            <if test="condition.status != null">
                and consume_status=#{condition.status}
            </if>
        </where>
	</select>
</mapper>